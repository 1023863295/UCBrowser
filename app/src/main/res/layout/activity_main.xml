<?xml version="1.0" encoding="utf-8"?>
<com.zibuyuqing.ucbrowser.widget.UCRootView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBg"
    android:orientation="vertical"
    android:id="@+id/ucRootView"
    tools:context="com.zibuyuqing.ucbrowser.MainActivity">
    <include
        android:id="@+id/llUCHeadLayout"
        layout="@layout/layout_uc_head">
    </include>

    <FrameLayout
        android:id="@+id/flUCNewsFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llUCHeadLayout"
        android:background="@color/windowBg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="center"
            android:background="@color/gray"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/windowBg"
            android:padding="8dp"
            android:text="UC头条"
            android:textColor="@color/gray" />
    </FrameLayout>
    <include
        android:id="@+id/llUCNewsListLayout"
        layout="@layout/layout_uc_news"></include>
    <include
        android:visibility="invisible"
        android:id="@+id/llTopSearchBar"
        layout="@layout/layout_top_search_bar">
    </include>
</com.zibuyuqing.ucbrowser.widget.UCRootView>
